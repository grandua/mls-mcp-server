{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "flowise start",
    "ports": [
      {
        "port": 3000,
        "protocol": "TCP",
        "public": true
      }
    ],
    "healthChecks": {
      "flowise": "curl -f http://localhost:3000 || exit 1",
      "mcp": "curl -f http://localhost:3001 || exit 1"
    }
  },
  "env": {
    "FLOWISE_PORT": "3000",
    "APIKEY_PATH": "/app/Flowise/encryption.key"
  }
}